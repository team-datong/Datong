<h2>Sign up for Datong</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :First_Name %><br />
    <%= f.text_field :fname, required: true%>
  </div>

  <div class="field">
    <%= f.label :Last_Name %><br />
    <%= f.text_field :lname, required: true %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, required: true%>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", required: true %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", required: true%>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class: "btn waves-effect waves-light" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
